{% extends 'layoutAdmin.html.twig' %}

{% block body %}
  

                        <div class="job-bx job-profile  bg-white">
                            <div class="job-bx-title clearfix">
                                <h5 class="font-weight-700 float-start  text-success">Profil</h5>


                            </div>

                                    {% for message in app.flashes('success') %}
            <div class="text-center text-dark alert alert-success">
                {{ message }}
            </div>
            {% endfor %}
                {% for message in app.flashes('error') %}
            <div class="text-center text-dark alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}
                            

                      
       
  {{ form_start(form ,{attr: {class:  'needs-validation',novalidate:'' }}) }}  
                                       <div class="row gap-20">
                                          <div class="col-lg-6 col-md-6">

                                        <div class="form-group">
                                            <div class="fs-0" >Nom</div>
                                              {{ form_widget(form.lname,{attr: {class: 'form-control',required:'true',maxlength:'20' }}) }} 
                                        </div>

                                    </div>
                                        <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <div class="fs-0" >Prénom</div>
                                         {{ form_widget(form.fname,{attr: {class: 'form-control',required:'true' ,maxlength:'20'}}) }} 
                                        </div>
                                    </div>
                                     <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <div class="fs-0" >Adresse électronique</div>
                                         {{ form_widget(form.mail,{attr: {class: 'form-control','pattern': '[A-Z-a-z0-9.]+@[A-2-a-z0-9.-]+\.[A-Z-a-z]{2,30}$',maxlength:'40'}}) }} 
                                        </div>
                                    </div>
                                     <div class="col-lg-6 col-md-6">
                                         <a  data-bs-toggle="modal" data-bs-target="#pass" ></a>
                                         <div class="fs-0" >Mot de passe</div>
                                        <div class="form-control border-2 border-dark" style="height:2.2rem">
                                       <a  data-bs-toggle="modal" data-bs-target="#pass" >******************           </a>
                                        
                                        </div>
                                    </div>

                                

                                  
                                </div>
                                 <div class=" m-t20" >

                                    <button type="submit" class="btn btn-success  ">Mettre à jour</button> </div>
                                       {{ form_end(form) }}
       
       
                            

                         <hr>
    
                         














                        
                        </div>
                       

            

















<div class="modal fade" id="pass" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 500px">
    <div class="modal-content position-relative">
      <div class="position-absolute top-0 end-0 mt-2 me-2 z-index-1">
        <button class="btn-close btn btn-sm btn-circle d-flex flex-center transition-base" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-0 ">
        <div class="rounded-top-lg py-3 ps-4 pe-6 bg-light">
          <h5 class="m-t10" id="modalExampleDemoLabel">Modifier Mot de passe</h5>
        </div>
        <div class="p-4 pb-0 border-top border-dark">
       
   {{ form_start(form_pass ,{attr: {class:  'needs-validation',novalidate:'' }}) }}  
                                       <div class="row gap-20">
                                         
                                            <div class="form-group">
                                            <div class="fs-0" >Mot de passe actuel</div>
                                              {{ form_widget(form_pass.oldpassword,{attr: {class: 'form-control',maxlength:'20'} }) }} 
                                      

                                    </div>
                                        <div class="form-group">
                                            <div class="fs-0" >Nouveau mot de passe</div>
                                              {{ form_widget(form_pass.newpassword,{attr: {class: 'form-control',pattern:'.{8,20}',placeholder:'Min 8 et Max 20 caractères',maxlentgh:'20'}}) }} 
                                      

                                    </div>
                                       
                                        <div class="form-group">
                                            <div class="fs-0" >Confirmer Nouveau mot de passe</div>
                                              {{ form_widget(form_pass.repeatedpassword,{attr: {class: 'form-control',pattern:'.{8,20}',placeholder:'Min 8 et Max 20 caractères',maxlength:'20'}}) }} 
                                      
                                    </div>

                                   

                                  
                                </div>
                                 <div class=" m-t20 m-b20" >

                                    <button type="submit" class="btn btn-success  ">Mettre à jour</button> </div>
                                       {{ form_end(form_pass) }}
       
        </div>

















      </div>
   
    </div>
  </div>
</div>

{% endblock %}