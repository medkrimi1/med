{% extends 'layout.html.twig' %}
{% block body %}
<div class="header-w bg-white" > </div>
<div class="page-content-glass">
   <!-- Section Banner -->
   <div class="dez-bnr-inr dez-bnr-inr-md   text-white text-center bg-img-fix" style="background-image: url({{ asset('images/Home.png') }});">
      <div class="container searchbar ">
         <div class="dez-bnr-inr-entry align-m ">
            <div class="dezPlaceAni">
               <div class=" carriere-title  fw-bold display-2 m-b20" >Bienvenue sur votre espace carrière</div>
               <div class="pxp-hero-form pxp-hero-form-round pxp-large bg-white ">
                  {{ form_start(form ,{attr: {class: 'row  align-items-center d-flex justify-content-center'}}) }} 
                  <div class="col-12 col-lg">
                     <div class="input-group mb-3 mb-lg-0">
                        {{ form_widget(form.Name,{attr: {class: 'form-control bg-200 text-center text-dark rounded-pill fw-bold'}}) }}
                     </div>
                  </div>
                  <div class="col-12 col-lg pxp-has-left-border">
                     <div class="input-group mb-3 mb-lg-0">
                        {{ form_widget(form.TypeJobs,{attr: {class: 'form-select bg-200 text-center text-primary rounded-pill  fw-bold'}}) }} 
                     </div>
                  </div>
                  <div class="col-12 col-lg-auto">
                     <button type="submit" class="rounded-pill btn btn-primary btn-lg card-title bg-primary " style="height:40px;">Rechercher</button>
                  </div>
                  {{ form_end(form) }} 
               </div>
            </div>
         </div>
      </div>
   </div>
   <div class=" text-center carriere-title  fw-bold display-5 m-t30 m-b20 text-dark" id="Liste" >Offres d'emploi récentes ({{jobs|length}})</div>
   <div class="section-full  content">
      <div class="container">
         <div class="row "  >
            <div class="col-lg-9">
               {% if jobs is empty %}
               <div class="alert alert-warning text-center" role="alert">
                  0 offre trouvé 
               </div>
               {% endif %}
               <ul class="post-job-bx text-dark ">
                  {% for job in jobs %}
                  <li>
                     <div class="post-bx bg-200 border-3 bg-white" >
                        <div class="d-flex m-b10">
                           <div class="">
                              <span> <img class="job-post-company d-none d-lg-block" style="background-image " src="
                                 {{asset('images/jobs/' ~job.image)}}" alt="Image" >
                              </span>
                           </div>
                           <div class="job-post-info ">
                              <h5 class="job-title text-dark"><a href="{{path('offre_get',{'slug':job.slug,'id':job.id})}}">{{ job.title }}</a></h5>
                              <ul>
                                 <li class="job-info "><i class="fas fa-map-marker-alt "></i> {{  job.country|capitalize }} ,{{  job.city|capitalize }} |</li>
                                 <li class="job-info"><i class="far fa-bookmark"></i> {{ job.typeid|capitalize }} |</li>
                                 <li class="job-info"><i class="far fa-clock"></i> {{ job.createdat|date("d/m/Y") }}</li>
                              </ul>
                           </div>
                        </div>
                        <div class="row">
                           <div class="container ">
                           </div>
                           <div class="d-flex justify-content-end" >
                              <div class="">
                                 <a href="{{path('offre_get',{'slug':job.slug,'id':job.id})}}"class="btn btn-primary rounded-pill "><i></i> Postuler</a>
                              </div>
                           </div>
                        </div>
                     </div>
                  </li>
                  </a>
                  {% endfor %}
               </ul>
            </div>
            <div class="col-lg-3">
               <div class="sticky-top">
                  <div class="candidates-are-sys m-b30 bg-white ">
                     <div class="candidates-bx ">
                        <div class="testimonial-pic radius "><img src="{{ asset('images/fondateur.jpg') }}" alt="" width="100" height="100"></div>
                        <div class="testimonial-text  ">
                           <p class=" text-dark">Nous sommes un centre spécialisé dans la transformation digitale notre priorité c’est de vous apporter un service IT de qualité auprès de nos clients et de notre société.</p>
                        </div>
                        <div class="testimonial-detail"> <strong class="fn text-primary">Firas Makni</strong> <span class="fn2">Fondateur,Tecos</span> </div>
                     </div>
                  </div>
                  <div class="quote-bx bg-white">
                     <div class="quote-info">
                        <h4 class="w-d text-dark ">Faites la différence avec votre CV en ligne !</h4>
                        <p class="w-d2 text-dark">Votre CV en quelques minutes avec l'assistant de CV Tecos est prêt !</p>
                        <a data-bs-toggle="modal" data-bs-target="#spontanee"  class="btn btn-primary rounded-pill" >Déposer CV</a>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
<div class="modal" id="spontanee" tabindex="-1" role="dialog" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content position-relative border border-dark">
         <div class="d-flex flex-row-reverse">
            <button class="btn-close btn btn-sm btn-circle d-flex flex-center transition-base" data-bs-dismiss="modal" aria-label="Close"></button>
         </div>
         <div class="modal-body">
            <div class="row gap-20">
               <div class="">
                  <div class=" tab-content ">
                     <div id="signup_apply" class="tab-pane active  col-12 p-a0 "  >
                        <h4 class=" popup-title text-center text-dark">Candidature Spontanée </h4>
                        <p class="text-center">Déposez votre candidature maintenant</p>
                        {{ form_start(form2 ,{attr: {class:  'needs-validation',novalidate:''}}) }}  
                        <div id="error3"></div>
                        <div class=" row gap-20 m-b30 ">
                           <div class=" ">
                              <div class="fs-0">Nom</div>
                              {{ form_widget(form2.lname,{attr: {class: 'form-control'}}) }}
                           </div>
                           <div class=" ">
                              <div class="fs-0">Prénom</div>
                              {{ form_widget(form2.fname,{attr: {class: 'form-control'}}) }}
                           </div>
                           <div class=" ">
                              <div class="fs-0">Adresse E-mail</div>
                              {{ form_widget(form2.email, {'attr': {'pattern': '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,63}$'}}) }}
                           </div>
                           <div class="">
                              <div class="fs-0">cv</div>
                              {{ form_widget(form2.cvfield,{attr: {class: 'form-control '},id:'uploadfile' }) }} 
                           </div>
                        </div>
                        {{ form_widget(form2.newpassword,{attr: {class: 'd-none'},required:false}) }} 
                        <div class="d-grid gap-2 "><button class="btn btn-primary" name="Upload File" value="Upload File" id="upload_btl" type="submit" >Déposer CV</button></div>
                        {{ form_end(form2) }}
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
</div>
{% endblock %}